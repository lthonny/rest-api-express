{
  "name": "rest-api-todo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development node index.js --mode development",
    "dev": "NODE_ENV=development nodemon index.js --mode development",
    "lint": "eslint --debug src/",
    "lint:write": "eslint --debug src/ --fix",
    "prettier": "npx prettier --write .",
    "create_db": "NODE_ENV=development npx sequelize-cli db:create && NODE_ENV=development npx sequelize-cli db:migrate",
    "setup_db_testing": "docker container run --rm -d --name=testing -p 5444:5432 -e POSTGRES_PASSWORD=test postgres || echo 'already running'",
    "create_db_testing": "NODE_ENV=test npx sequelize-cli db:create && NODE_ENV=test npx sequelize-cli db:migrate && NODE_ENV=test npx sequelize-cli db:seed:all",
    "make_seed": "npx sequelize-cli seed:generate --name demo-task",
    "seed": "npx sequelize-cli db:seed:all",
    "test": "NODE_ENV=test node index.js nodemon --mode test"
  },
  "author": "Vasilich",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "mongodb": "^4.0.1",
    "mongoose": "^5.13.3",
    "nodemon": "^2.0.12",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.2.0"
  },
  "nodemonConfig": {
    "ignore": [
      "tasks.json"
    ]
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "prettier": "^2.4.1"
  },
  "engines": {
    "node": ">=16.8.0 <16.9.0",
    "npm": ">=7.21.0 <7.22.0"
  },
  "engineStrict": true
}
